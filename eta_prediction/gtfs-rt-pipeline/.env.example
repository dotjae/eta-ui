# --- Django ---
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,web

# --- Database ---
DATABASE_URL=postgresql://gtfs:gtfs@postgres:5432/gtfs
# For host tooling outside Docker, override to postgresql://gtfs:gtfs@localhost:15432/gtfs

# --- Redis (Celery broker/backend) ---
REDIS_URL=redis://redis:6379/0
# For host tooling override to redis://localhost:16379/0

# --- GTFS-RT Feed Configuration ---
FEED_NAME=demo
GTFSRT_VEHICLE_POSITIONS_URL=https://cdn.mbta.com/realtime/VehiclePositions.pb
GTFSRT_TRIP_UPDATES_URL=https://cdn.mbta.com/realtime/TripUpdates.pb
POLL_SECONDS=30

# --- HTTP Client ---
HTTP_CONNECT_TIMEOUT=3
HTTP_READ_TIMEOUT=5
